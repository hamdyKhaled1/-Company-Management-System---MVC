@model DepartmentViewModel
@{
    ViewData["Title"] = "Create";
}
<div class="alert alert-seccess">
    @TempData["Message"]
</div>

<h1>Create New Department</h1>
<br />
<br />

<form method="post" asp-action="Create">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" type="date" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>|
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section validationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

