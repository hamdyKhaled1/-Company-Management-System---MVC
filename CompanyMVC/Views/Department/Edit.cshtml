@model DepartmentViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Department</h1>

<form method="post" asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input asp-for="DateOfCreation" class="form-control" type="date" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <button type="submit" value="Save" class="btn btn-primary">Submit</button>|
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
@section validationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

